<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">




    <ImageView android:layout_width="150dp" android:layout_height="150dp"
    android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:id="@+id/img_view"

    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:layout_toRightOf="@+id/img_view"
              android:text="Name"
              android:textSize="30sp"
              android:paddingLeft="20dp"
              android:id="@+id/name"

              android:layout_marginLeft="23dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/name"
              android:layout_toRightOf="@+id/img_view"
              android:text="Country"
              android:textSize="30sp"
              android:paddingLeft="20dp"
              android:paddingTop="10dp"
              android:id="@+id/country"

              android:layout_marginLeft="22dp" android:layout_marginTop="0dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/country"
              android:layout_toRightOf="@+id/img_view"
              android:text="City"
              android:textSize="30sp"
              android:paddingLeft="20dp"
              android:paddingTop="10dp"
android:id="@+id/city"
              android:layout_marginLeft="24dp" android:layout_marginTop="0dp"/>

</RelativeLayout>

